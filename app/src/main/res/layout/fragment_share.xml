<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareFragment">
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ShareFragment"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help us grow our community!"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/share_app_description"
            android:scaleType="centerCrop"
            android:src="@drawable/sharecontactsimg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_instruction"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_share_with_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_with_contacts"
            android:textColor="@color/white"
            android:drawablePadding="8dp"
            android:padding="12dp"/>

    </LinearLayout>


</RelativeLayout>
